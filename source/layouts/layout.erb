<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title || config[:site_name] %></title>
    <meta name="description" content="<%= current_page.data.description || config[:site_description] %>">
    <meta name="keywords" content="<%= current_page.data.keywords || config[:site_keywords] %>">

    <!-- Meta description -->
    <meta property="og:local" content="<%= current_page.data.local || config[:site_local] %>">
    <meta property="og:type" content="<%= current_page.data.type || config[:site_page_type] %>">
    <meta property="og:title" content="<%= current_page.data.title || config[:site_name] %>">
    <meta property="og:description" content="<%= current_page.data.description || config[:site_description] %>">
    <meta property="og:url" content="<%= config[:site_url] + current_page.url %>">
    <meta property="og:site_name" content="<%= config[:site_name] %>">
    <meta property="og:image" content="<%= current_page.data.image || config[:site_image] %>">

    <!-- Twitter Meta description -->
    <meta name="twitter:card" content="<%= current_page.data.card || config[:twitter_card] %>">
    <meta name="twitter:description" content="<%= current_page.data.description || config[:site_description] %>">
    <meta name="twitter:title" content="<%= current_page.data.title || config[:site_name] %>">
    <meta name="twitter:site" content="<%= config[:site_url] %>">
    <meta name="twitter:image" content="">
    <meta name="twitter:creator" content="<%= current_page.data.author || config[:site_author] %>">

    <!-- Icon -->
    <link rel="shortcut icon" href="assets/images/favicon/favicon.ico" type="image/x-icon">
    <link rel="icon" href="assets/images/favicon/favicon.jpg" type="image/jpg">
    <link rel="icon" sizes="32x32" href="assets/images/favicon/favicon-32.jpg" type="image/jpg">
    <link rel="icon" sizes="64x64" href="assets/images/favicon/favicon-64.jpg" type="image/jpg">
    <link rel="icon" sizes="96x96" href="assets/images/favicon/favicon-96.jpg" type="image/jpg">
    <link rel="icon" sizes="196x196" href="assets/images/favicon/favicon-196.jpg" type="image/jpg">
    <link rel="apple-touch-icon" sizes="152x152" href="assets/images/favicon/apple-touch-icon.jpg">
    <link rel="apple-touch-icon" sizes="60x60" href="assets/images/favicon/apple-touch-icon-60x60.jpg">
    <link rel="apple-touch-icon" sizes="76x76" href="assets/images/favicon/apple-touch-icon-76x76.jpg">
    <link rel="apple-touch-icon" sizes="114x114" href="assets/images/favicon/apple-touch-icon-114x114.jpg">
    <link rel="apple-touch-icon" sizes="120x120" href="assets/images/favicon/apple-touch-icon-120x120.jpg">
    <link rel="apple-touch-icon" sizes="144x144" href="assets/images/favicon/apple-touch-icon-144x144.jpg">
    <meta name="msapplication-TileImage" content="assets/images/favicon/favicon-144.jpg">

    <!-- Color Theme -->
    <meta name="theme-color" content="<%= current_page.data.color || config[:site_color] %>">
    <meta name="msapplication-navbutton-color" content="<%= current_page.data.color || config[:site_color] %>">
    <meta name="apple-mobile-web-app-status-bar-style" content="<%= current_page.data.color || config[:site_color] %>">

    <%= stylesheet_link_tag "site" %>
    <%= javascript_include_tag "site" %>
  </head>
  <body class="<%= "page_" + current_page.data.className || "" %>" data-page="<%= current_page.data.className || "" %>">
    <%= partial "layouts/header" %>
    <main>
      <%= yield %>
    </main>
    <%= partial "layouts/footer" %>
  </body>
</html>
